<%= form_for(@tab) do |f| %>
  <% if @tab.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tab.errors.count, "error") %> Prohibited this expense from being saved:</h2>

      <ul>
      <% @tab.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <% if @all_users %>
    <h3>Select users to share the expenses in this tab:</h3>
    <% @all_users.each do |user| %>
      <%= check_box_tag "tab[splitters][]", "#{user.id}" %>
    <% end %>
  <% else %>
    <p>Sorry, there are no users who can share your expenses. Invite some!</p>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

